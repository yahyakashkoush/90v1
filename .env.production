# Production Environment Configuration

# Database
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/retro-fashion?retryWrites=true&w=majority

# Server Configuration
NODE_ENV=production
PORT=5000
PRODUCTION_URL=https://your-domain.com

# JWT Secret (Generate a strong secret for production)
JWT_SECRET=your-super-secure-jwt-secret-key-for-production-use-a-long-random-string

# Cloudinary Configuration (for image storage)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# AI Services (Optional)
REPLICATE_API_TOKEN=your-replicate-api-token
OPENAI_API_KEY=your-openai-api-key

# CORS Configuration
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-admin-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking